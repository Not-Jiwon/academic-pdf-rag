import os
from typing import List, Dict, Any
from langchain_community.document_loaders import PyPDFLoader
from langchain_text_splitters import RecursiveCharacterTextSplitter
from langchain_openai import OpenAIEmbeddings, ChatOpenAI
from langchain_community.vectorstores import Chroma
from langchain.chains import RetrievalQA
from langchain.prompts import PromptTemplate

API_KEY = "YOUR_OPENAI_API_KEY_HERE"
os.environ["OPENAI_API_KEY"] = API_KEY

class AcademicQAEngine:
    def __init__(self, model_name: str = "gpt-4o"):
        self.vector_db = None
        self.llm = ChatOpenAI(model_name=model_name, temperature=0.0)
        self.embedding_function = OpenAIEmbeddings()
        
    def ingest_documents(self, pdf_paths: List[str]):
        docs = []
        for path in pdf_paths:
            if os.path.exists(path):
                loader = PyPDFLoader(path)
                docs.extend(loader.load())
            else:
                print(f"Warning: File not found {path}")

        text_splitter = RecursiveCharacterTextSplitter(
            chunk_size=1000,
            chunk_overlap=200,
            separators=["\n\n", "\n", ".", "!", "?", ",", " ", ""]
        )
        splits = text_splitter.split_documents(docs)
        
        self.vector_db = Chroma.from_documents(
            documents=splits,
            embedding=self.embedding_function,
            persist_directory="./academic_db"
        )

    def query(self, question: str) -> Dict[str, Any]:
        if not self.vector_db:
            return {"error": "Database not initialized."}

        prompt_template = """
        Use the following pieces of context to answer the question at the end. 
        If you don't know the answer, just say that you don't know, don't try to make up an answer.
        Keep the answer as concise as possible and use academic tone.
        
        {context}
        
        Question: {question}
        Answer:"""
        
        PROMPT = PromptTemplate(
            template=prompt_template, input_variables=["context", "question"]
        )

        qa_chain = RetrievalQA.from_chain_type(
            llm=self.llm,
            chain_type="stuff",
            retriever=self.vector_db.as_retriever(search_kwargs={"k": 3}), 
            return_source_documents=True, 
            chain_type_kwargs={"prompt": PROMPT}
        )

        result = qa_chain.invoke({"query": question})
        return self._format_response(result)

    def _format_response(self, result: Dict[str, Any]) -> Dict[str, Any]:
        answer = result["result"]
        sources = []
        
        seen_pages = set()
        for doc in result["source_documents"]:
            source_name = doc.metadata.get('source', 'Unknown')
            page_num = doc.metadata.get('page', 'Unknown')
            if (source_name, page_num) not in seen_pages:
                sources.append(f"{os.path.basename(source_name)} (Page {page_num})")
                seen_pages.add((source_name, page_num))
        
        return {
            "answer": answer,
            "citations": sources
        }

if __name__ == "__main__":
    engine = AcademicQAEngine()
